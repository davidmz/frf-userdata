{
    "Listen": "localhost:8356",
    "LogLevel": "error",
    "CORSOrigins": [
        "https://freefeed.net",
        "https://micropeppa.freefeed.net"
    ],
    "DBURL": "user=user password=password host=localhost dbname=base sslmode=disable",
    "Sites": {
        "freefeed.net": {
            "APIRoot": "https://freefeed.net"
        },
        "micropeppa.freefeed.net": {
            "APIRoot": "https://micropeppa.freefeed.net"
        }
    },
    "PublicParams": {
        "selfInfo": {
            "Default": {
                "descr": "",
                "place": "",
                "links": []
            },
            "MaxRequestSize": 10000,
            "Schema": {
                "$schema": "http://json-schema.org/draft-04/schema#",
                "id": "/",
                "type": "object",
                "properties": {
                    "descr": {
                        "id": "/descr",
                        "type": "string",
                        "maxLength": 500
                    },
                    "place": {
                        "id": "/place",
                        "type": "string",
                        "maxLength": 200
                    },
                    "links": {
                        "id": "/links",
                        "type": "array",
                        "maxItems": 10,
                        "items": {
                            "id": "/links/0",
                            "type": "string",
                            "maxLength": 200
                        }
                    }
                },
                "additionalProperties": false,
                "required": [
                    "descr",
                    "place",
                    "links"
                ]
            }
        }
    }
}